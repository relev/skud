= form_for @device do |f|
  - if @device.errors.any?
    #error_explanation
      %h2= "#{pluralize(@device.errors.count, "error")} prohibited this device from being saved:"
      %ul
        - @device.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :device_type
    = f.text_field :device_type
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :session_key
    = f.number_field :session_key
  .field
    = f.label :device_key
    = f.text_field :device_key
  .actions
    = f.submit 'Save'
