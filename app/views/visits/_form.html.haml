= form_for @visit do |f|
  - if @visit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@visit.errors.count, "error")} prohibited this visit from being saved:"
      %ul
        - @visit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :device
    = f.text_field :device
  .field
    = f.label :session_key
    = f.number_field :session_key
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :closed_at
    = f.datetime_select :closed_at
  .actions
    = f.submit 'Save'
